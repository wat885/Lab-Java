package com.buzzfreeze.lab;

public class Employee {

	public String firstname;
	public String lastname;
	private int salary;
	// 1. ประกาศตัวแปล position str เก็บตำแหน่ง
	// 2. สร้าง method public checkPosion
	// print ตำแหน่ง
	public String position;

	public static void main(String[] args) {
		Employee em1 = new Employee("Krisada", "Chalermsook", 10000, "CEO");
		
		test();

		em1.hello();
		em1.checkPosition();

	}
	
	public static void test() {
		System.out.println("this is static method");
	}

	public Employee(String firstnameInput, String lastnameInput, int salaryInput, String positionInput) {
		firstname = firstnameInput;
		lastname = lastnameInput;
		salary = salaryInput;
		position = positionInput;
	}

	public void hello() {
		System.out.println("Hello " + firstname);
	}

	public int getSalary() {
		return salary;
	}

	public void checkPosition() {
		System.out.println("My Position is " + position);
	}

}
